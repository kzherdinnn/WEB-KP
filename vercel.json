{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "server/api/index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/sitemap.xml",
            "dest": "/client/sitemap.xml",
            "headers": {
                "Content-Type": "application/xml"
            }
        },
        {
            "src": "/robots.txt",
            "dest": "/client/robots.txt",
            "headers": {
                "Content-Type": "text/plain"
            }
        },
        {
            "src": "/google([a-zA-Z0-9]+).html",
            "dest": "/client/google$1.html",
            "headers": {
                "Content-Type": "text/html"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/client/$1"
        }
    ]
}